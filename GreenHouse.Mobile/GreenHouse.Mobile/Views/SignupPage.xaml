<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHouse.Mobile.Views.SignupPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="Lbl_Username" Text="Username"/>
            <Entry x:Name="Entry_Username" Placeholder="Username"/>
            <Label x:Name="Lbl_Email" Text="Email"/>
            <Entry x:Name="Entry_Email" Placeholder="Email"/>
            <Label x:Name="Lbl_Password" Text="Password"/>
            <Entry x:Name="Entry_Password" Placeholder="Password"/>
            <Button x:Name="Btn_Signup" Text="Sign up" Clicked="SignupProcedure"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>